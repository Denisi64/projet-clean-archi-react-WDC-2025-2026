{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["packages/domain/*"],
      "@application/*": ["packages/application/*"],
      "@interfaces/*": ["packages/interfaces/*"]
    }
  }
}
